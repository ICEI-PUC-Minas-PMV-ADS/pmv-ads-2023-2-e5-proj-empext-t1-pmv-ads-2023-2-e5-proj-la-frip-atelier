@page
@model BrechoLaFripAtelier.Pages.Sales.SalesPerDayModel

@{
    ViewData["Title"] = "Período de Vendas";
}

<h1 class="mb-3 mt-5 display-4">Período de Vendas</h1>

<div class="d-flex justify-content-between">
    <form method="get">
        <div class="row g-3 align-items-end">
            <div class="col-auto">
                <label for="startDate">Data Inicial:</label>
                <input class="form-control" type="date" id="startDate" name="startDate" />
            </div>
            <div class="col-auto">
                <label for="endDate">Data Final:</label>
                <input class="form-control" type="date" id="endDate" name="endDate" />
            </div>

            <div class="col-auto">
                <button class="btn btn-secondary" type="submit">Filtrar</button>
            </div>
        </div>
    </form>

    <a asp-page="SalesPerPartner" class="btn btn-primary mt-4">Por Parceira</a>
</div>

<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th>Data</th>
            <th>Total de Itens Vendidos</th>
            <th>Saldo Total</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.SalesByDay.Any())
        {
            @foreach (var item in Model.SalesByDay)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.TotalItemsSold</td>
                    <td>@item.TotalAmount</td>
                    <td>
                        <a asp-page="./Result" asp-route-date="@item.Date.ToString("yyyy-MM-dd")" class="btn btn-info">
                            Ver
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Nenhuma venda no intervalo de datas fornecido.</td>
            </tr>
        }
    </tbody>
</table>
