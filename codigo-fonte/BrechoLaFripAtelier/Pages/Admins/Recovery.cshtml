@page
@model BrechoLaFripAtelier.Pages.Admins.RecoveryModel
@{
    ViewData["Title"] = "Recuperação";
    Layout = "_Layout1";
}

<h1 class="text-center mb-3 mt-5 display-4">RECUPERAR SENHA</h1>

<div class="row">
    <div class="col-md-4 mx-auto">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label asp-for="SecurityQuestion" class="control-label"></label>
                <input type="text" asp-for="SecurityQuestion" readonly class="form-control-plaintext fw-bold">
            </div>
            <div class="form-group">
                <label asp-for="SecurityResponse" class="control-label"></label>
                <input asp-for="SecurityResponse" class="form-control" />
                <span asp-validation-for="SecurityResponse" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <div class="mt-3">
                    <a href="./Login" class="btn btn-secondary">Retornar ao Login</a>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Confirmar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
