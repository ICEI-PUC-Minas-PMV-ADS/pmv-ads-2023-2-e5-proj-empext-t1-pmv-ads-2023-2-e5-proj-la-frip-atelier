@page
@model BrechoLaFripAtelier.Pages.Admins.RecoveryModel
@{
    ViewData["Title"] = "Recovery";
}

<h1>Recuperar Senha</h1>
<hr />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Username">Nome de Usuário:</label>
        <input asp-for="Username" type="text" class="form-control form-control-md w-auto" required />
    </div>

    @if (!string.IsNullOrEmpty(Model.SecurityQuestion))
    {
        <!-- Pergunta Secreta -->
        <div class="form-group d-flex align-items-center">
            <label>Pergunta Secreta: </label>
            <div>&nbsp;@Model.SecurityQuestion</div>
        </div>

        <!-- Resposta à Pergunta Secreta -->
        <div class="form-group mb-3">
            <label asp-for="SecurityResponse">Responda a Pergunta Secreta:</label>
            <input asp-for="SecurityResponse" class="form-control form-control-md w-auto" required />
        </div>
    }

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Recuperar Senha</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
