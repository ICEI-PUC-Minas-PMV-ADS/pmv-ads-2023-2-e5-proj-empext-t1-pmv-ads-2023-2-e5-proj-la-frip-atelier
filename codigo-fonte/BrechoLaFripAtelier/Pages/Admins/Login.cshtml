@page
@model BrechoLaFripAtelier.Pages.Admins.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout1";
}

<h1></h1>

<h1 class="text-center mb-3 mt-5 display-4">LOGIN</h1>

<div class="row">
    <div class="col-md-4 mx-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Admin.Username" class="control-label"></label>
                <input asp-for="Admin.Username" class="form-control" />
                <span asp-validation-for="Admin.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admin.Password" class="control-label"></label>
                <input asp-for="Admin.Password" class="form-control" />
                <span asp-validation-for="Admin.Password" class="text-danger"></span>
            </div>

            @if (Model.AdminsExist)
            {
                <a asp-page="Recovery">Recuperar senha</a>
            }

            <div class="d-flex justify-content-between">
                <div class="form-group mt-3">
                    <input type="submit" value="Confirmar" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger mt-3">@TempData["Message"]</div>
        }
    </div>
</div>
<br />
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
