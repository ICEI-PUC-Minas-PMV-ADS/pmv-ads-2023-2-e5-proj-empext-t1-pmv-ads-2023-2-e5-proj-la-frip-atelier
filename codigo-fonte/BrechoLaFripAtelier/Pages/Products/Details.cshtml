@page
@model BrechoLaFripAtelier.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="mb-3 mt-5 display-4">Produtos</h1>

<h4>Detalhes</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Partner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Partner.CPFnumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Status)
        </dd>

        <div class="d-flex justify-content-between col-md-4 mt-3">
            <a href="javascript:history.back()" class="btn btn-secondary">Voltar</a>
            <a asp-page="./Edit" asp-route-id="@Model.Product?.Id" class="btn btn-primary">
                Editar
            </a>
        </div>
    </dl>
</div>
