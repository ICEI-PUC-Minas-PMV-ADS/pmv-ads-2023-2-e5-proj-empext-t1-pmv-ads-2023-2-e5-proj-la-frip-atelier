@page
@model BrechoLaFripAtelier.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Produtos";
}

<h1 class="mb-3 mt-5 display-4">Produtos</h1>

<div class="d-flex justify-content-between">
    <form method="get">
        <div class="input-group mb-3 mt-3">
            <input type="text" name="search" class="form-control disable-to-print" placeholder="Buscar">
            <button class="btn btn-outline-secondary disable-to-print" type="submit">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>

    <div class="mb-3 mt-3">
        <a asp-page="Create" class="btn btn-primary disable-to-print">Cadastrar</a>
    </div>
</div>

<button type="button" class="btn btn-secondary btn-sm disable-to-print" onclick="javascript:window.print()">
    <i class="bi bi-printer"></i> Imprimir
</button>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Partner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Product.Any())
        {
            @foreach (var item in Model.Product)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Partner.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary disable-to-print">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger disable-to-print">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>Não há produto cadastrado</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
