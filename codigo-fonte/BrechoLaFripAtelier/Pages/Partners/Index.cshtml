@page
@model BrechoLaFripAtelier.Pages.Partners.IndexModel

@{
    ViewData["Title"] = "Parceiras";
}

<h1 class="mb-3 mt-5 display-4">Parceiras</h1>

<div class="d-flex justify-content-between">
    <form method="get">
        <div class="input-group mb-3 mt-3">
            <input type="text" name="search" class="form-control" placeholder="Buscar">
            <button class="btn btn-outline-secondary" type="submit">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>

    <div class="mb-3 mt-3">
        <a asp-page="Create" class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Partner[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Partner[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Partner[0].CPFnumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Partner[0].Commission)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Partner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPFnumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commission)%
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">
                    <i class="bi bi-pencil-square"></i>
                </a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
